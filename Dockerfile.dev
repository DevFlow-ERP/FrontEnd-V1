# ============================================
# Development Dockerfile with Hot Reload
# ============================================
FROM node:20-alpine

WORKDIR /app

# Copy all files first (needed for quasar prepare)
COPY . .

# Copy Docker environment file
COPY .env.development .env

# Install dependencies (this will run quasar prepare as postinstall)
RUN npm ci

# Expose Quasar dev server port
EXPOSE 9000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:9000/ || exit 1

# Start development server
CMD ["npm", "run", "dev"]
